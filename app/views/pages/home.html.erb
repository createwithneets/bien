<h1><%= @content.title %></h1>
<%= simple_format @content.body %>


<h2>Highly Rated Reviews</h2>
 <% @highly_rated_reviews.each do |review| %>
<p>  <%= link_to review.title, review_path(review)%> (<%= review.score %>/ 10), rated by

  <% if review.user.present? %>
  <%= review.user.username %>
  <% else %>
  anonymous
  <% end %></p>
  <% end %>


  <h2>Featured Reviews </h2>
   <% @featured_reviews.each do |review| %>
  <p>  <%= link_to review.title, review_path(review)%> (<%= review.score %>/ 10), rated by

    <% if review.user.present? %>
    <%= review.user.username %>
    <% else %>
    anonymous
    <% end %></p>
    <% end %>
